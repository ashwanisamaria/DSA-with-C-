
#include <stdio.h>

int main() {
   int a[]={12,45,48,55,85,89};
   int num, i, beg=0, end=5, mid, found=0;
   printf("enter the number to be searched : ");
   scanf("%d", &num);
   while(beg<=end){
       mid=(beg+end)/2;
       if(a[mid]==num){
           printf("number at positioned %d", mid);
           found=1;
           break;
       }
       else if(a[mid]<num){
           beg=mid+1;
           
       }
       else if(a[mid]>num){
           end=mid-1;
       }
       
   }
   
   if(found==0){
       printf("number not found!");
   }

    return 0;
}
